<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="174dp"
    android:layout_height="221dp"
    android:layout_marginEnd="9dp">

    <TextView
        android:id="@+id/tv_category_flash"
        android:layout_width="49.5dp"
        android:layout_height="17dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="121dp"
        android:background="@drawable/shape_form_and_button"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Kids"
        android:textSize="6sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category_name_flash"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="144dp"
        android:elevation="10dp"
        android:text="Samsung S10"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_price_flash"
        android:layout_width="43dp"
        android:layout_height="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="192dp"
        android:elevation="10dp"
        android:text="$ 180,000"
        android:textColor="@color/white"
        android:textSize="7sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_fab_flash"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:elevation="10dp"
        android:layout_marginStart="135dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/fab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_heart_flash"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:elevation="10dp"
        android:src="@drawable/heart_flash"
        android:layout_marginTop="183dp"
        android:layout_marginStart="102dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_photo_flash"
        app:layout_constraintStart_toStartOf="@+id/iv_photo_flash" />

    <ImageView
        android:id="@+id/iv_photo_sale"
        android:layout_width="49dp"
        android:layout_height="18dp"
        android:src="@drawable/discount"
        android:elevation="10dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@+id/iv_photo_flash"
        app:layout_constraintTop_toTopOf="@id/iv_photo_flash" />

    <TextView
        android:id="@+id/tv_discount_flash"
        android:layout_width="41dp"
        android:layout_height="16dp"
        android:elevation="11dp"
        android:text="@string/discount"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/iv_photo_sale"
        app:layout_constraintBottom_toBottomOf="@id/iv_photo_sale"
        app:layout_constraintEnd_toEndOf="@id/iv_photo_sale"
        app:layout_constraintTop_toTopOf="@id/iv_photo_sale"/>

    <ImageView
        android:id="@+id/iv_photo_feedback"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        android:src="@drawable/feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_photo_flash"
        android:layout_width="174dp"
        android:layout_height="221dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/circle_flash"
        tools:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
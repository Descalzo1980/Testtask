<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_phones_category"
        android:layout_width="35dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="31dp"
        android:gravity="center"
        android:background="@drawable/shape_form_and_button"
        android:elevation="10dp"
        android:text="Phones"
        android:textSize="6sp" />

    <TextView
        android:id="@+id/tv_phone_name"
        android:layout_width="75dp"
        android:layout_height="26dp"
        android:elevation="10dp"
        android:text="Samsung S10"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="31dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="40dp"
        android:layout_height="9dp"
        android:elevation="10dp"
        android:text="$ 180,000"
        android:textColor="@color/white"
        android:textSize="7sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="31dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_fab"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/iv_latest_photo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="-25dp"
        android:elevation="10dp"
        android:src="@drawable/fab" />

    <ImageView
            android:id="@+id/iv_latest_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_samsung" />

</RelativeLayout>